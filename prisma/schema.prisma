// Prisma schema for reviews persistence
// 1) Set DATABASE_URL in .env, e.g.:
//    DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public"
// 2) After installing dependencies, run:
//    npx prisma migrate dev --name init_reviews

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id        String   @id @default(cuid())
  name      String
  email     String
  project   String?  @db.VarChar(255)
  rating    Int      @default(5)
  text      String
  createdAt DateTime @default(now())
}
